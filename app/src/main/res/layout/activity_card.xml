<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepager.CardActivity">
    <ImageView
        android:id="@+id/ima_view_card_activ"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    </ImageView>
    <ImageButton
        android:id="@+id/ima_bt_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/smssdk_common_transparent"
        android:src="@mipmap/fabulous_64"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">
    </ImageButton>
    <TextView
        android:id="@+id/tv_thumb_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="15sp"
        android:textColor="#000000"
       android:layout_toRightOf="@id/ima_bt_thumb"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        >
    </TextView>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/favorite_filling_default"
        android:background="@color/smssdk_common_transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="35dp">
    </ImageButton>
    <TextView
        android:id="@+id/tv_collect_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="30dp"
        >
    </TextView>
</RelativeLayout>