<?xml version="1.0" encoding="utf-8"?>
<com.example.mypotplant.notification.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/ima_maintain_notifi"
            android:scaleType="fitXY"
            android:src="@drawable/tab_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_maintain_notifi"
            android:layout_marginLeft="20dp"
            android:paddingLeft="50dp"
            android:text="test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_main_notifi_stick"
            android:text="置顶"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="#cccccc"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_main_notifi_mark"
            android:text="标记未读"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="#ffcc00"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_main_notifi_delete"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="#ff0000"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</com.example.mypotplant.notification.SwipeItemLayout>